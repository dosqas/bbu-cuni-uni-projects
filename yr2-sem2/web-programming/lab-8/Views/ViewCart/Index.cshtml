@{
    ViewBag.Title = "Your Cart";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <style>
        .cart-item {
            border: 1px solid #ccc;
            padding: 10px;
            margin-bottom: 10px;
            max-width: 400px;
        }
        .cart-item h2 {
            margin: 0;
        }
        .cart-item p {
            margin: 5px 0;
        }
        .cart-item input {
            width: 50px;
            text-align: center;
        }
        .cart-item button {
            padding: 5px 10px;
            background-color: #FF0000;
            color: white;
            border: none;
            cursor: pointer;
        }
        .cart-item button:hover {
            background-color: #CC0000;
        }
    </style>
</head>
<body>
    <h1>Your Cart</h1>
    <a href="/Browse">Back to Browse</a>
    <div id="cart">
        <!-- Cart items will be dynamically loaded here -->
    </div>

    <script src="/js/cartViewModel.js"></script>
</body>
</html>
